CC = g++

Libs = -lm -lntl
CFLAGS = -Wall -Wno-deprecated -g -DLINUX -I//h/ruriko/latte/NewLattE/Install/NTL/NTL/include

Lib_Dirs = -L//h/ruriko/latte/NewLattE/Install/NTL/NTL/lib


%.o: %.c
	$(CC) $(CFLAGS) -c $<

%.o: %.cc
	$(CC) $(CFLAGS) -c $<

%.o: %.cpp
	$(CC) $(CFLAGS) -c $<

clean:
	@-echo "CLEANING..."
	@-rm -f *.o *~ 


